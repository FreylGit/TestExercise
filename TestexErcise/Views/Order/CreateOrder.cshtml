@using TestExercise.Models.ViewModels;
@model CreateOrderViewModel
@{
    ViewData["Title"] = "Создание заказа";
}

<div class="container">
    <div class="row">
        @if (Model.ErrorMessage == null)
        {
            <h1 class="text-danger" >@Model.ErrorMessage</h1>
        }
        <div asp-validation-summary="All" class="text-danger"></div>
        <form method="post" asp-action="CreateOrder">
        <div class="form-group">
            <label>Номер:</label><input type="number"  asp-for="Order.Number" value="" class="form-control" />
        </div>
        <div class="form-group">
                <label>
                    Дата:
                </label>
                <input type="date"  asp-for="Order.Date" value="" class="form-control" value="@DateTime.Now" />
        </div>
        <div class="form-group">
                <select class="form-select" aria-label="Default select example"  asp-for="@Model.Order.ProviderId">
                    <option selected>Поставщики</option>
                    @foreach(var provider in Model.Providers)
                    {
                        <option value="@provider.Id">@provider.Name</option>
                    }
                  
                </select>
        </div>
        <button type="submit" class="btn btn-primary">Создать</button>    
        </form>
        
            
    </div>
</div>
