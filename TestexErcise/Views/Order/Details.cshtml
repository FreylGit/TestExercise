@model OrderItem
@{
    ViewData["Title"] = "Детали";
}
<div class="container">
<div class="row justify-content-center">
    <div class="col-4">
            <div class="form-group">
                <label>Имя :</label><input type="text" asp-for="Name" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label>Количество :</label><input type="text" asp-for="Quantity" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label>Единицы измерения :</label><input type="text" asp-for="Unit" class="form-control" readonly />
            </div>
            <a class="btn btn-secondary mt-4" asp-action="Index" asp-route-id="@Model.OrderId">Назад</a>
    </div>
</div>
</div>