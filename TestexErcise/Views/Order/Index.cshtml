@model Order
@{
    ViewData["Title"] = "Просмотр заказа";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-3">
            <div class="form-group">
                <label>Поставщик:</label><input type="text" asp-for="Provider.Name" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label>Номер:</label><input type="number" asp-for="Number" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label>Дата:</label><input type="date" asp-for="Date"  class="form-control" readonly />
            </div>
            <a class="btn btn-secondary mt-4 asp-action="Index" asp-controller="Home">Назад</a>
        </div>

        </div>
        <div class="row justify-content-center mt-5">

        
        <div class="col-6">
            @if (Model.Items.Count() > 0)
            {
                <table class="table table-dark">
                    <thead>
                    <th>Имя:</th>
                    <th>Количество:</th>
                    <th>Единицы измерения:</th>
                    <th></th>
                    </thead>
                    @foreach (var item in Model.Items)
                    {
                        <tbody>
                        <td>@item.Name</td>
                        <td>@item.Quantity</td>
                        <td>@item.Unit</td>
                        <td>
                           <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Детали</a>
                        </td>
                        </tbody>
                    }

                </table>
            }
        </div>
       
    </div>
    
</div>